{
  "models": {
    "ForceGNN": {
      "hidden_dim": 32,
      "out_feat": 2,
      "num_layers": 4
    },
    "GCN": {
      "hidden_channels": 192,
      "dropout_rate": 0.3
    },
    "ChebConv": {
      "hidden_channels": 64,
      "num_layers": 3,
      "K": 2,
      "dropout": 0.4,
      "use_residual": true
    },
    "GAT": {
      "hidden_channels": 64,
      "heads": 8,
      "num_layers": 3,
      "dropout": 0.2
    },
    "GIN": {
      "hidden_channels": 128,
      "num_layers": 4,
      "dropout": 0.4
    }
  },
  "training": {
    "circular": {
      "num_epochs": 2000,
      "learning_rate": 0.003,
      "weight_decay": 0.001,
      "batch_size": 256,
      "min_epochs": 1000,
      "max_patience": 100
    },
    "force_directed": {
      "num_epochs": 2000,
      "learning_rate": 0.002,
      "weight_decay": 0.005,
      "batch_size": 256,
      "min_epochs": 1000,
      "max_patience": 100
    }
  },
  "optimization": {
    "circular": {
      "optimizer": "Adam",
      "scheduler": {
        "type": "ReduceLROnPlateau",
        "mode": "min",
        "factor": 0.8,
        "patience": 70,
        "min_lr": 1e-6
      }
    },
    "force_directed": {
      "optimizer": "AdamW",
      "betas": [0.9, 0.999],
      "scheduler": {
        "type": "ReduceLROnPlateau",
        "mode": "min", 
        "factor": 0.8,
        "patience": 70,
        "min_lr": 1e-6
      }
    }
  },
  "data": {
    "splits": [0.8, 0.1, 0.1],
    "random_state": 42,
    "paths": {
      "circular": "data/processed/normalized_modelInput_circular_layout.pt",
      "force_directed": "data/processed/processed5000_forcedirected_degree.pt"
    }
  },
  "visualization": {
    "output_dir": "results/figures",
    "num_samples": 5,
    "dpi": 300,
    "figsize": [10, 5],
    "node_size": 80,
    "edge_width": 0.5
  },
  "evaluation": {
    "batch_size": 1,
    "device": "cuda:0"
  },
  "mlp_layers": {
    "position": {
      "dropout_rate": 0.4,
      "use_layer_norm": false
    },
    "radius": {
      "dropout_rate": 0.3,
      "use_layer_norm": false,
      "constrained_output": true
    },
    "angle": {
      "dropout_rate": 0.2,
      "use_layer_norm": true
    },
    "attention": {
      "dropout_rate": 0.6,
      "use_layer_norm": true
    }
  },
  "paths": {
    "results": {
      "base": "results",
      "force_directed": "results/force_directed",
      "circular": "results/circular",
      "figures": "results/figures"
    },
    "models": {
      "circular_chebconv": "results/GNN_Model_ChebConv_normalized_41nodes_batchbest.pt",
      "force_forcegnn_256": "results/force_directed/ForceGNN/ForceDirected_ForceGNN_bs256_best.pt",
      "force_forcegnn_32": "results/force_directed/ForceGNN/ForceDirected_ForceGNN_bs32_best.pt"
    }
  }
}
